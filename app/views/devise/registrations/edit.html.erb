<div class="form-edit">
  <h4 class="hello"> Mise Ã  jour de votre compte</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
      <h4>Change your username ?</h4>
    <%= f.text_field :username, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
      <div class="d-flex"><h4>New password</h4></div>
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "leave it blank to keep old one" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
      <h4>New password confirmation</h4>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
      <h4>Your current password</h4>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update",class:"btn-primary btn btn-submit" %>
  </div>
<% end %>

</div>
</div>
</div>
